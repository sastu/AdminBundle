    {% block javascripts %}
        
        {% set max_file_size = get_max_size_file() %}
        <script> var maxFileSize = {{max_file_size}}</script>
        {% javascripts 
            'bundles/admin/plugins/jQuery/jQuery-2.1.4.min.js'
            'http://code.jquery.com/ui/1.11.2/jquery-ui.min.js'
            'bundles/admin/bootstrap/js/bootstrap.min.js'
            'http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js'
            'bundles/admin/plugins/morris/morris.min.js'
            'bundles/admin/plugins/sparkline/jquery.sparkline.min.js'
            'bundles/admin/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js'
            'bundles/admin/plugins/jvectormap/jquery-jvectormap-world-mill-en.js'
            'bundles/admin/plugins/knob/jquery.knob.js'
            'https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js'
            'bundles/admin/plugins/daterangepicker/daterangepicker.js'
            'bundles/admin/plugins/datepicker/bootstrap-datepicker.js'
            'bundles/admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js'
            'bundles/admin/plugins/datatables/old/jquery.dataTables.js'
            'bundles/admin/plugins/datatables/old/dataTables.bootstrap.js'
            'bundles/admin/plugins/slimScroll/jquery.slimscroll.min.js'
