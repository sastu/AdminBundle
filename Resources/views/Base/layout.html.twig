  {% block body %}
  <body class="skin-blue {{ not app.request.get('top-nav') and 
                            not app.request.get('boxed') and 
                            not app.request.get('fixed') and
                            not app.request.get('collapsed') ? 'sidebar-mini' }}
                        {{ app.request.get('top-nav') ? 'layout-top-nav' }}
                        {{ app.request.get('boxed') ? 'layout-boxed sidebar-mini' }}
                        {{ app.request.get('fixed') ? 'fixed sidebar-mini' }}
                        {{ app.request.get('collapsed') ? 'sidebar-collapse sidebar-mini' }}" current="{% block section %}dashboard{% endblock %} {% block body_attr %}{% endblock %}">
    <div class="wrapper">

        {% block header %}
            <header class="main-header">
                <!-- Logo -->
                <a href="/admin" class="logo">
                  <!-- mini logo for sidebar mini 50x50 pixels -->
                  <span class="logo-mini"><b>O</b>S</span>
                  <!-- logo for regular state and mobile devices -->
                  <span class="logo-lg"><b>Opti</b>Soop</span>
                </a>
                <!-- Header Navbar: style can be found in header.less -->
                <nav class="navbar navbar-static-top" role="navigation">
                  <!-- Sidebar toggle button-->
                  <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </a>
                  <div class="navbar-custom-menu">
                      {% include 'AdminBundle:Base:navbar.top.html.twig' %}
                  </div>
                </nav>
            </header>
        {% endblock %}  
        
        {% block aside %}
        {% if not app.request.get('top-nav') %}
            <!-- Left side column. contains the logo and sidebar -->
            <aside class="main-sidebar">
                <!-- sidebar: style can be found in sidebar.less -->
                {% include 'AdminBundle:Base:sidebar.left.html.twig' %}
                <!-- /.sidebar -->
            </aside>
        {% endif %}
        {% endblock %} 
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            {% block content %}{% endblock %}
        </div>
        <!-- /.content-wrapper -->
        
        <footer class="main-footer">
        <div class="pull-right hidden-xs">
          <b>Version</b> 2.0
        </div>
        <strong>Copyright &copy; 2014-2015 <a href="http://www.core.com">Optisoop</a>.</strong> All rights reserved.
      </footer>
      
      <!-- Control Sidebar -->      
      {% include 'AdminBundle:Base:control.sidebar.html.twig' %}
      <!-- /.control-sidebar -->
      
      <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
      <div class='control-sidebar-bg'></div>
    </div><!-- ./wrapper -->

