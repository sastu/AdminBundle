<html>
    
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ core['name']}} - Admin{% endblock %}</title>

        <meta content="width=device-width, initial-scale=1.0" name="viewport" />
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
        {% block stylesheets %}
            {% stylesheets
                'bundles/admin/bootstrap/css/bootstrap.min.css' 
                'https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'
                'bundles/admin/css/AdminLTE.min.css'
                'bundles/admin/plugins/iCheck/square/blue.css' 
                'bundles/admin/css/login.css'
                filter='cssrewrite' %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
            
        {% endblock %}
    </head>
    
    <body class="login">
        <body class="login-page">
            <div class="login-box">
                <div class="login-logo">
                  <a href="../../index2.html"><b>Opti</b>Soop</a>
                </div><!-- /.login-logo -->
                <div class="login-box-body">
                    <p class="login-box-msg">Inicia sesion para entrar al admin</p>
                    
                     {% if error is defined and error %}
                        <div>{{ error.message }}</div>
                     {% endif %}
                
                    <form action="{{ path('login_check') }}" method="post">
                      <div class="form-group has-feedback">
                        <input type="email" class="form-control" placeholder="Email" name="_username" id="_username" />
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                      </div>
                      <div class="form-group has-feedback">
                        <input type="password" class="form-control" placeholder="Password" name="_password" id="_password"/>
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                      </div>
                      <div class="row">
                        <div class="col-xs-8">    
                          <div class="checkbox icheck">
                            <label>
                              <input type="checkbox"> Recordar
                            </label>
                          </div>                        
                        </div><!-- /.col -->
                        <div class="col-xs-4">
                          <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
                        </div><!-- /.col -->
                      </div>
                    </form>

                    {#<div class="social-auth-links text-center">
                      <p>- OR -</p>
                      <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using Facebook</a>
                      <a href="#" class="btn btn-block btn-social btn-google-plus btn-flat"><i class="fa fa-google-plus"></i> Sign in using Google+</a>
                    </div><!-- /.social-auth-links -->

                    <a href="#">I forgot my password</a><br>
                    <a href="register.html" class="text-center">Register a new membership</a>
                    #}

                  </div><!-- /.login-box-body -->
            </div><!-- /.login-box -->
 
       
        {% block javascripts %}
            {% javascripts 
                'bundles/admin/plugins/jQuery/jQuery-2.1.4.min.js'
                'bundles/admin/bootstrap/js/bootstrap.min.js'
                'bundles/admin/plugins/iCheck/icheck.min.js'
                 %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}


            <!-- page script -->
            <script>
              $(function () {
                $('input').iCheck({
                  checkboxClass: 'icheckbox_square-blue',
                  radioClass: 'iradio_square-blue',
                  increaseArea: '20%' // optional
                });
              });
            </script>
        {% endblock %}
    </body>
</html>